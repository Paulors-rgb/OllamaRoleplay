<Window x:Class="OllamaRoleplay.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ¤– Ollama Roleplay"
        Height="850" Width="1250"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panneau latÃ©ral gauche -->
        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    
                    <!-- SÃ©lection de la langue de l'app -->
                    <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock x:Name="LblAppLanguage" Text="Langue / Language" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                            <ComboBox x:Name="AppLanguageComboBox" SelectionChanged="AppLanguageComboBox_SelectionChanged">
                                <ComboBoxItem Content="ðŸ‡«ðŸ‡· FranÃ§ais" Tag="fr"/>
                                <ComboBoxItem Content="ðŸ‡¬ðŸ‡§ English" Tag="en"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                    
                    <!-- Status Ollama + OpenVoice -->
                    <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Ellipse x:Name="StatusIndicator" Width="10" Height="10" Fill="Gray" Margin="0,0,6,0"/>
                                <TextBlock x:Name="LblStatusOllama" Text="Status Ollama" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Ellipse x:Name="TTSStatusIndicator" Width="10" Height="10" Fill="Gray" Margin="0,0,6,0"/>
                                <TextBlock Text="OpenVoice TTS" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Ellipse x:Name="STTStatusIndicator" Width="10" Height="10" Fill="Gray" Margin="0,0,6,0"/>
                                <TextBlock Text="Whisper STT" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                            </StackPanel>
                            
                            <!-- URLs configurables -->
                            <TextBlock Text="OpenVoice TTS URL:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Margin="0,4,0,2"/>
                            <TextBox x:Name="CosyVoiceUrlBox" Text="http://127.0.0.1:9233" 
                                     Style="{StaticResource ModernTextBox}" FontSize="10" Padding="6,4" Margin="0,0,0,4"/>
                            <TextBlock Text="Whisper STT URL:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Margin="0,0,0,2"/>
                            <TextBox x:Name="SenseVoiceUrlBox" Text="http://127.0.0.1:9234" 
                                     Style="{StaticResource ModernTextBox}" FontSize="10" Padding="6,4" Margin="0,0,0,8"/>
                            
                            <Button x:Name="BtnCheckConnection" Content="ðŸ”„ VÃ©rifier connexion" Click="CheckConnection_Click" 
                                    Style="{StaticResource PrimaryButton}" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>

                    <!-- SÃ©lection du modÃ¨le -->
                    <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock x:Name="LblLLMModel" Text="ModÃ¨le LLM" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                            <ComboBox x:Name="ModelComboBox" SelectionChanged="ModelComboBox_SelectionChanged"
                                      Style="{StaticResource ModernComboBox}" DisplayMemberPath="DisplayName"/>
                            <TextBlock x:Name="ModelSizeText" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Option Internet -->
                    <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock x:Name="LblInternetAccess" Text="AccÃ¨s Internet" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="InternetCheckBox" Checked="InternetCheckBox_Changed" Unchecked="InternetCheckBox_Changed"/>
                                <TextBlock x:Name="InternetStatusText" Text="DÃ©sactivÃ©" Foreground="{StaticResource TextSecondaryBrush}" Margin="6,0,0,0" VerticalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Liste des personnages -->
                    <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,12">
                        <StackPanel>
                            <Grid Margin="0,0,0,6">
                                <TextBlock x:Name="LblCharacters" Text="Personnages" FontWeight="Bold" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="âž•" Click="NewCharacter_Click" Width="28" Height="28" 
                                            Background="{StaticResource SecondaryBrush}" Foreground="White" BorderThickness="0" FontSize="14"/>
                                    <Button Content="ðŸ—‘ï¸" Click="DeleteCharacter_Click" Width="28" Height="28" 
                                            Background="#D32F2F" Foreground="White" Margin="4,0,0,0" BorderThickness="0" FontSize="14"/>
                                </StackPanel>
                            </Grid>
                            <ListBox x:Name="CharacterListBox" SelectionChanged="CharacterListBox_SelectionChanged"
                                     Style="{StaticResource ModernListBox}" MaxHeight="100">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" Padding="6,3" Foreground="White" FontSize="12"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!-- Ã‰diteur de personnage -->
                    <Border x:Name="CharacterEditor" Background="{StaticResource CardBrush}" CornerRadius="8" Padding="10" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock x:Name="LblEditCharacter" Text="âœï¸ Ã‰diter" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
                            
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="6"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="6"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="LblName" Text="Nom" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                                    <TextBox x:Name="CharNameBox" Style="{StaticResource ModernTextBox}" FontSize="11" Padding="6,4"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock x:Name="LblAge" Text="Ã‚ge (18+)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                                    <TextBox x:Name="CharAgeBox" Style="{StaticResource ModernTextBox}" FontSize="11" Padding="6,4" Text="18" ToolTip="Minimum 18 ans"/>
                                </StackPanel>
                                <StackPanel Grid.Column="4">
                                    <TextBlock x:Name="LblGender" Text="Sexe" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                                    <ComboBox x:Name="CharGenderCombo" FontSize="11">
                                        <ComboBoxItem Content="â™‚ Masculin" Tag="Male"/>
                                        <ComboBoxItem Content="â™€ FÃ©minin" Tag="Female"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock x:Name="LblLanguage" Text="Langue du personnage" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                            <TextBox x:Name="CharLanguageBox" Style="{StaticResource ModernTextBox}" FontSize="11" Padding="6,4" Margin="0,0,0,6"/>
                            
                            <TextBlock x:Name="LblDescription" Text="Description physique" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                            <TextBox x:Name="CharDescBox" Style="{StaticResource ModernTextBox}" AcceptsReturn="True" TextWrapping="Wrap" Height="45" FontSize="11" Padding="6,4" Margin="0,0,0,6"/>
                            
                            <TextBlock x:Name="LblPersonality" Text="PersonnalitÃ©" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                            <TextBox x:Name="CharPersonalityBox" Style="{StaticResource ModernTextBox}" AcceptsReturn="True" TextWrapping="Wrap" Height="40" FontSize="11" Padding="6,4" Margin="0,0,0,6"/>
                            
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="6"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="LblLikes" Text="Aime" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                                    <TextBox x:Name="CharLikesBox" Style="{StaticResource ModernTextBox}" FontSize="11" Padding="6,4"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock x:Name="LblDislikes" Text="DÃ©teste" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                                    <TextBox x:Name="CharDislikesBox" Style="{StaticResource ModernTextBox}" FontSize="11" Padding="6,4"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Ã‰chantillon vocal pour CosyVoice -->
                            <TextBlock x:Name="LblVoiceSample" Text="ðŸŽ¤ Ã‰chantillon vocal (MP3/WAV)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="CharVoicePath" Style="{StaticResource ModernTextBox}" FontSize="10" Padding="6,4" IsReadOnly="True"/>
                                <Button Grid.Column="1" Content="ðŸ“‚" Click="SelectVoiceSample_Click" Width="30" Height="26" Margin="4,0,0,0" 
                                        Background="{StaticResource PrimaryBrush}" Foreground="White" BorderThickness="0"/>
                            </Grid>
                            
                            <Button x:Name="BtnSaveCharacter" Content="ðŸ’¾ Sauvegarder" Click="SaveCharacter_Click" 
                                    Style="{StaticResource PrimaryButton}" HorizontalAlignment="Stretch" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Zone de chat principale -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tÃªte du chat -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="12,10">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ¤–" FontSize="24" VerticalAlignment="Center"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock x:Name="HeaderCharName" Text="Aucun personnage" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="HeaderCharDesc" Text="" Opacity="0.8" Foreground="White" FontSize="11" TextTrimming="CharacterEllipsis" MaxWidth="350"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="BtnClearChat" Content="ðŸ—‘ï¸" Click="ClearChat_Click" Width="32" Height="32"
                                Background="Transparent" Foreground="White" BorderThickness="0" ToolTip="Effacer le chat"/>
                        <Button x:Name="BtnSaveChat" Content="ðŸ’¾" Click="SaveChat_Click" Width="32" Height="32"
                                Background="Transparent" Foreground="White" BorderThickness="0" Margin="4,0,0,0" ToolTip="Sauvegarder"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Zone des messages avec menu contextuel -->
            <ScrollViewer Grid.Row="1" x:Name="MessagesScrollViewer" VerticalScrollBarVisibility="Auto" Padding="12">
                <ItemsControl x:Name="MessagesItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding Background}" 
                                    HorizontalAlignment="{Binding Alignment}"
                                    CornerRadius="10" Padding="10,6" Margin="0,3" MaxWidth="550"
                                    Tag="{Binding MessageId}">
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="ðŸ“‹ Copier" Click="CopyMessage_Click"/>
                                        <MenuItem Header="âœï¸ Modifier" Click="EditMessage_Click"/>
                                        <MenuItem Header="ðŸ—‘ï¸ Supprimer" Click="DeleteMessage_Click"/>
                                        <Separator/>
                                        <MenuItem Header="ðŸ”Š Lire (TTS)" Click="PlayMessageTTS_Click"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <StackPanel>
                                    <TextBlock Text="{Binding RoleLabel}" FontSize="10" Opacity="0.7" Foreground="White"/>
                                    <TextBox Text="{Binding Content, Mode=OneWay}" 
                                             IsReadOnly="True" BorderThickness="0" Background="Transparent"
                                             Foreground="White" TextWrapping="Wrap" FontSize="13"
                                             ContextMenu="{x:Null}"/>
                                    <TextBlock Text="{Binding TimeStamp}" FontSize="9" Opacity="0.5" HorizontalAlignment="Right" Foreground="White"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Zone de saisie -->
            <Border Grid.Row="2" Padding="12,8" Background="{StaticResource SurfaceBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Bouton Micro -->
                    <Button Grid.Column="0" x:Name="MicButton" Content="ðŸŽ¤" Click="MicButton_Click" 
                            Width="40" Height="40" FontSize="18" Margin="0,0,8,0"
                            Background="{StaticResource SecondaryBrush}" Foreground="White"
                            BorderThickness="0" ToolTip="Maintenir pour parler"/>
                    
                    <TextBox Grid.Column="1" x:Name="InputTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             AcceptsReturn="False" TextWrapping="Wrap" MaxHeight="80"
                             VerticalScrollBarVisibility="Auto" 
                             KeyDown="InputTextBox_KeyDown"
                             FontSize="13"/>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="8,0,0,0">
                        <Button x:Name="SendButton" Content="ðŸ“¤" Click="SendMessage_Click" 
                                Width="40" Height="40" FontSize="18"
                                Style="{StaticResource PrimaryButton}" ToolTip="Envoyer (EntrÃ©e)"/>
                        <Button x:Name="StopButton" Content="â¹ï¸" Click="StopGeneration_Click" 
                                Width="40" Height="40" FontSize="18"
                                Background="#FF5722" Foreground="White"
                                BorderThickness="0" Margin="6,0,0,0" Visibility="Collapsed" ToolTip="ArrÃªter"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Barre de status avec statistiques -->
            <Border Grid.Row="3" Padding="10,5" Background="{StaticResource CardBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="StatusText" Text="PrÃªt" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" FontSize="11"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock x:Name="StatsText" Text="" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" FontSize="10" Margin="0,0,10,0"/>
                        <ProgressBar x:Name="ProgressIndicator" IsIndeterminate="True" Width="80" Height="3" Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
